@page
@model SportQuestTracker.Pages.Companies.CompanyLoggingPageModel

@{
    ViewData["Title"] = "clp";
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportQuestTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<nav class="navbar fixed-top bg-warning border border-bottom border-dark">
    <a class="navbar-brand h1" style="font-family: 'Ranchers', cursive; margin-left: 20vw; font-size: 2rem;">Sport Quest Tracker</a>
    
    <form class="form-inline justify-content-end" style="margin-right: 10vw">
        <input class="form-control mr-sm-2" type="email" placeholder="e-mail" aria-label="Email">
        <input class="form-control mr-sm-2" type="password" placeholder="password" aria-label="Password">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Sign in</button>
    </form>
</nav>

<div MainContainer>
    <div class="container-left align-items-lg-start" style="background-image: url('../wwwroot/ball.png.png')" align="center">

    </div>
    <div class="container border-right">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Company.CompanyName" class="control-label"></label>
                        <input asp-for="Company.CompanyName" class="form-control" placeholder="Company name" />
                        <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Company.Password" class="control-label"></label>
                        <input asp-for="Company.Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Company.Password" class="text-danger"></span>
                    </div>
                    <button class="form-group">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

